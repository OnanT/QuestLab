# ----- Docker Shortcuts -----
# Basic Docker commands
alias d='sudo docker'
alias dc='sudo docker-compose'
alias dps='sudo docker ps'
alias dpsa='sudo docker ps -a'
alias di='sudo docker images'
alias dex='sudo docker exec -it'
alias dlog='sudo docker logs -f'
alias dstop='sudo docker stop'
alias drm='sudo docker rm'
alias drmi='sudo docker rmi'

# Docker cleanup aliases
alias dclean='sudo docker system prune -af --volumes'
alias dclean-containers='sudo docker rm $(sudo docker ps -aq)'
alias dclean-images='sudo docker rmi $(sudo docker images -q)'
alias dclean-volumes='sudo docker volume rm $(sudo docker volume ls -q)'
alias dclean-networks='sudo docker network rm $(sudo docker network ls -q)'

# Docker info
alias dspace='sudo docker system df'
alias dinspect='sudo docker inspect'

# Docker Compose shortcuts
alias dcup='sudo docker-compose up -d'
