alias hiredis="redis-cli ping && redis-cli info server && ps aux | grep redis && redis-cli KEYS '*' && redis-cli LLEN celery"
alias reloadredis="redis-server --daemonize yes" # If not running, start it manually
# Celery management shortcuts
alias hicelery="celery -A celery_app:app status && celery -A celery_app:app inspect active && celery -A celery_app:app inspect registered && ps aux | grep celery"
alias startcelery="celery -A celery_app:app worker --loglevel=info --concurrency=4"
alias checkcelery="celery -A celery_app:app status && celery -A celery_app:app inspect active"
alias purgecelery="celery -A celery_app:app purge -f"
alias reloadcelery="celery -A celery_app:app worker --loglevel=debug --concurrency=2"
alias logcelery="celery -A celery_app.app worker --loglevel=info"
alias qcelery="source ~/.venvs/blackwolf/bin/activate && celery -A celery_worker.celery_app worker --loglevel=info"





